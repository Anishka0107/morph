.container
  %h1.page-header Pricing Table
  %p &#160;
  .row.pricing.row-centered
    .col-xs-3.col-centered
      %ul.plan.plan1
        %li.plan-name
          Basic
        %li.plan-price
          %strong $29
          \/ month
        %li
          %strong 5GB
          Storage
        %li
          %strong 1GB
          RAM
        %li
          %strong 400GB
          Bandwidth
        %li
          %strong 10
          Email Address
        %li
          %strong Forum
          Support
        %li.plan-action
          = form_tag supporters_path do
            %script{src: "https://checkout.stripe.com/checkout.js", class: "stripe-button",
                    data: {key: Rails.configuration.stripe[:publishable_key],
                           description: "Basic supporter",
                           amount: "2900",
                           email: current_user.email}}

    .col-xs-3.col-centered
      %ul.plan.plan2.featured
        %li.plan-name
          Standard
        %li.plan-price
          %strong $39
          \/ month
        %li
          %strong 5GB
          Storage
        %li
          %strong 1GB
          RAM
        %li
          %strong 400GB
          Bandwidth
        %li
          %strong 10
          Email Address
        %li
          %strong Forum
          Support
        %li.plan-action
          %a.btn.btn-default.btn-lg{:href => "#"} Signup

    .col-xs-3.col-centered
      %ul.plan.plan3
        %li.plan-name
          Advanced
        %li.plan-price
          %strong $199
          \/ month
        %li
          %strong 50GB
          Storage
        %li
          %strong 8GB
          RAM
        %li
          %strong 1024GB
          Bandwidth
        %li
          %strong Unlimited
          Email Address
        %li
          %strong Forum
          Support
        %li.plan-action
          %a.btn.btn-default.btn-lg{:href => "#"} Signup
