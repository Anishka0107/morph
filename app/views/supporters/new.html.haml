.container
  %h1.page-header Become a supporter
  %p &#160;
  .row.pricing.row-centered
    .col-xs-3.col-centered
      %ul.plan.plan1
        %li.plan-name
          Basic
        %li.plan-price
          %strong $14
          \/ month
        %li
          %strong Feel
          the warm and fuzzies
        %li
          %strong Forum
          Support
        %li
          %strong 1GB
          RAM
        %li.plan-action
          = form_tag supporters_path do
            = hidden_field_tag :price, 2900
            %script{src: "https://checkout.stripe.com/checkout.js", class: "stripe-button",
                    data: {key: Rails.configuration.stripe[:publishable_key],
                           description: "Basic supporter",
                           amount: "2900",
                           email: current_user.email}}

    .col-xs-3.col-centered
      %ul.plan.plan2.featured
        %li.plan-name
          Standard
        %li.plan-price
          %strong $24
          \/ month
        %li
          %strong Feel
          the warm and fuzzies
        %li
          %strong Forum
          Support
        %li
          %strong 1GB
          RAM
        %li.plan-action
          %a.btn.btn-default.btn-lg{:href => "#"} Signup

    .col-xs-3.col-centered
      %ul.plan.plan3
        %li.plan-name
          Advanced
        %li.plan-price
          %strong $149
          \/ month
        %li
          %strong Feel
          the warm and fuzzies
        %li
          %strong Forum
          Support
        %li
          %strong Priority
          technical support
        %li.plan-action
          %a.btn.btn-default.btn-lg{:href => "#"} Signup
